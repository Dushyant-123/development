<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/profile_bg"
     android:orientation="vertical"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <niaata.com.niaata.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/user_profile_avatar_size"
        android:layout_height="@dimen/user_profile_avatar_size"
        android:layout_gravity="center"
        android:paddingTop="@dimen/default_stack_spacing"
        app:srcCompat="@mipmap/profile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"

        android:text="Jone Doe"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"

        android:text="New Delhi,INDIA"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />



</LinearLayout>
